{
    "name": "lizards-and-pumpkins/lib-queue-filesystem",
    "description": "Lizards & Pumpkins Filesystem Queue Library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Lizards & Pumpkins UG",
            "email": "hello@lizardsandpumpkins.com"
        }
    ],
    "require": {
        "php": "~7.0.0",
        "lizards-and-pumpkins/catalog": "~0.18.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "lizards-and-pumpkins/coding-standards": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "LizardsAndPumpkins\\Messaging\\Queue\\File\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LizardsAndPumpkins\\Messaging\\Queue\\File\\": "tests/Unit/Suites"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit -c tests/Unit/phpunit.xml.dist",
        "sniff": "vendor/bin/phpcs --runtime-set ignore_warnings_on_exit true --runtime-set ignore_errors_on_exit true -p --colors --standard=vendor/lizards-and-pumpkins/coding-standards/src/LizardsAndPumpkins/ src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
